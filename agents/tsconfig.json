{
  "extends": "../tsconfig.json",

  "compilerOptions": {
    "types": ["node"],
    "rootDir": "./src",
    "declarationDir": "dist",
    "outDir": "dist"
  },
  "typedocOptions": {
    "name": "agents",
    "entryPointStrategy": "resolve",
    "readme": "none",
    "entryPoints": ["src/index.ts"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"]
}
