{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "allowJs": false,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "composite": true
  },
  "typedocOptions": {
    "entryPoints": ["agents", "plugins/*"],
    "entryPointStrategy": "packages",
    "name": "LiveKit Agents",
    "excludeInternal": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "excludeExternals": true,
    "includeVersion": true,
    "out": "docs",
    "theme": "default"
  },
  "rootDir": ".",
  "baseUrl": ".",
  "paths": {
    "@livekit/agents": ["agents/src"],
    "@livekit/agents-plugin-openai": ["plugins/openai/src"]
  }
}
